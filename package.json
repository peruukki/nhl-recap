{
  "name": "nhl-recap",
  "version": "1.21.8",
  "description": "Check the latest NHL scores.",
  "keywords": [
    "NHL",
    "scores",
    "cyclejs"
  ],
  "author": "Harri Lehtola <peruukki@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peruukki/nhl-recap.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.1 <7.0"
  },
  "config": {
    "browserify_args": "app/js/app.js -t babelify -t [ envify purge ]",
    "hashmark_args": "-s -r -c public -m public/assets.json -l 8 public/{name}-{hash}{ext}"
  },
  "scripts": {
    "autoprefix": "postcss --use autoprefixer --replace public/app.css",
    "browserify": "browserify $npm_package_config_browserify_args -g uglifyify | uglifyjs -c -o public/app.js",
    "build": "npm run build:assets && parallelshell 'npm run build:css' 'npm run build:js'",
    "build:assets": "cp -r app/assets/** public",
    "build:css": "npm run sass && npm run autoprefix | npm run hash:css && npm run hash:inject",
    "build:js": "npm run browserify | npm run hash:js && npm run hash:inject",
    "clean:build": "rm -rf public; mkdir public",
    "clean:dist": "cd dist && git fetch origin && git reset --hard origin/gh-pages && rm -rf *",
    "clone:dist": "[ -d 'dist' ] || git clone -b gh-pages --single-branch git@github.com:peruukki/nhl-recap.git dist",
    "commit:dist": "cd dist && git add -A . && git commit -m \"Version $npm_package_version\"",
    "copy:dist": "cp -r public/* dist",
    "copy:normalize": "mkdir -p app/sass/vendor && cp node_modules/normalize.css/normalize.css app/sass/vendor",
    "hash:css": "hashmark -n public/app.css $npm_package_config_hashmark_args",
    "hash:js": "hashmark -n public/app.js $npm_package_config_hashmark_args",
    "hash:inject": "replaceinfiles -S -r public/assets.json -s public/*.html -d {dir}/{base}",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "sass-lint -v",
    "lint:js": "eslint *.js app/js/*.js{,x} test/*.js",
    "postcopy:dist": "rm -f dist/assets.json",
    "postinstall": "npm run copy:normalize",
    "prebuild": "npm run clean:build",
    "prewatch": "npm run clean:build",
    "publish": "npm run build && npm run clone:dist && npm run clean:dist && npm run copy:dist && npm run commit:dist && npm run push:dist",
    "push:dist": "cd dist && git push origin gh-pages",
    "sass": "node-sass app/sass/app.scss public/app.css --output-style compressed",
    "server": "http-server public -p 8000 -o",
    "spec": "mocha --compilers js:babel-register",
    "start": "parallelshell 'npm run watch' 'npm run server'",
    "start:local": "SCORE_API_HOST=http://localhost:8080 npm start",
    "svg": "node generate-svg-data.js",
    "test": "npm run lint && npm run spec",
    "watch": "parallelshell 'npm run watch:assets' 'npm run watch:css' 'npm run watch:js'",
    "watch:assets": "watch 'cp -r app/assets/** public' app/assets",
    "watch:css": "npm run sass && npm run autoprefix && npm run sass -- -w app/sass/*.scss",
    "watch:js": "watchify $npm_package_config_browserify_args -o public/app.js -v",
    "watch:lint:js": "esw -w *.js app/js/*.js{,x} test/*.js",
    "watch:lint:css": "watch 'npm run lint:css' app/sass"
  },
  "dependencies": {
    "@cycle/dom": "^17.0.0",
    "@cycle/http": "^13.2.0",
    "@cycle/run": "^3.1.0",
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "normalize.css": "^5.0.0",
    "xstream": "^10.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^14.1.0",
    "chai": "^3.4.1",
    "envify": "^4.1.0",
    "eslint": "^3.18.0",
    "eslint-watch": "^3.0.1",
    "hashmark": "^3.1.0",
    "http-server": "^0.9.0",
    "mocha": "^3.2.0",
    "nock": "^9.0.9",
    "node-sass": "^4.5.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0",
    "replaceinfiles": "^1.1.3",
    "sass-lint": "^1.5.0",
    "uglify-js": "^2.6.1",
    "uglifyify": "^3.0.1",
    "watch": "^1.0.2",
    "watchify": "^3.6.1"
  },
  "private": true
}
